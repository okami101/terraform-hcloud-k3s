hcloud_token                = "<required_hcloud_token>"
server_image                = "ubuntu-22.04"
server_location             = "nbg1"
cluster_name                = "kube"
cluster_user                = "kube"
my_public_ssh_name          = "kube"
my_public_ssh_key           = "<required_public_ssh_key>"
my_ip_addresses             = ["0.0.0.0/0", "::/0"]
k3s_channel                 = "latest"
controllers = {
  server_type       = "cx21"
  server_count      = 1
  private_interface = "ens10"
}
workers = [
  {
    role              = "worker"
    server_type       = "cx21"
    server_count      = 2
    private_interface = "ens10"
  },
  {
    role              = "data"
    server_type       = "cx21"
    server_count      = 1
    private_interface = "ens10"
  }
]
volumes = [
  {
    name   = "vol-01",
    server = "controller-01"
    size   = 10
  }
]
lb_services = [80, 443]
